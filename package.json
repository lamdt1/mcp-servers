{
  "name": "mp3-mcp-server",
  "version": "0.1.0",
  "description": "MCP server wrapping mp3-api for searching and playing music",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mp3-server.js": "mp3-server.js"
  },
  "scripts": {
    "build": "node --max-old-space-size=8192 node_modules/typescript/bin/tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "mp3-server": "npm run build && node ./mp3-server.js"
  },
  "keywords": [
    "mcp",
    "mp3",
    "zingmp3",
    "music"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "axios": "^1.7.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
